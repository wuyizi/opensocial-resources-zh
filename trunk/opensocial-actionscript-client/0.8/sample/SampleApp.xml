<?xml version="1.0" encoding="UTF-8" ?>
<Module>
<ModulePrefs title="SampleApp" 
             description="Just a sample to demo Opensocial Flash Client SDK."
             height="500"> 
  <Require feature="opensocial-0.8"/>
  <Require feature="flash"/>
  <Require feature="views"/>
  <Require feature="rpc"/>
  <Require feature="settitle"/>
  <Require feature="dynamic-height"/>
</ModulePrefs>
<Content type="html">
<![CDATA[

<h1 style="font-size:32px; font-weight:bold; font-family:verdana; text-align: center;">Sample App</h1>
<div id="flashcontainer" style="text-align: center;"></div>

<script type="text/javascript">
  var DEBUG = true;
  var nocache = new Date().getTime();
  var baseUrl = "http://opensocial-resources-zh.googlecode.com/svn/trunk/opensocial-actionscript-client/0.8/";
  function loadJs() {
    var script = document.createElement("script");
    script.src = baseUrl + "src/org/opensocial/client/jswrapper/javascript/opensocial-flashsdk.js?bpc=" + nocache;
    script.type = "text/javascript";
    document.getElementsByTagName("head")[0].appendChild(script);
  };
  loadJs();
  function loadSwf() {
    if (!opensocial.flash) {
      window.setTimeout(loadSwf, 100);
      return;
    }
    opensocial.flash.embedFlash(
       baseUrl + "bin/SampleApp.swf?bpc=" + nocache,
       "flashcontainer",
       "9.0.115.0", 
       {
          width: "600",
          height: "500",
          quality: "high",
          wmode: "window",
          allowScriptAccess: "always"
       });
    gadgets.window.adjustHeight();
  };
  window.setTimeout(loadSwf, 100);
</script>

]]>
</Content>
</Module>
